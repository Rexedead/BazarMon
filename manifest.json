{
  "name": "BazarMon",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Rexedead",
  "description": "Auto bump your offers, and price checker at lowcygier.pl",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "cookies",
    "declarativeContent",
    "storage",
    "tabs",
    "debugger",
    "alarms", 
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "https://*.lowcygier.pl/*",
    "http://*.lowcygier.pl/*"
  ],
  "background": {
    "page": "background.html"
},
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  }
}